                <div class="form-group">
                    <div class="clearfix">
                        <h3>Registro</h3>
                        <div class="form-group">
                            <label for="Inputname">Nombre</label>
                            <input type="nombre" name="nombre" class="form-control" id="Inputname" placeholder="Nombre">
                        </div>
                        <label for="InputEmail1">Correo Electronico</label>
                        <input type="email" class="form-control" name="correo" id="InputEmail1" aria-describedby="emailHelp"
                            placeholder="Ingrese email">
                    </div>
                    <div class="form-group">
                        <label for="InputPassword1">Contraseña</label>
                        <input type="password" class="form-control" name="password" id="InputPassword1" placeholder="Contraseña">
                    </div>
                    <div class="form-group">
                        <label for="Inputfechanacimiento">Fecha nacimiento</label>
                            <!-- min=”1970-01-01″ max=”2000-01-01″ value="2019-02-01">  -->
