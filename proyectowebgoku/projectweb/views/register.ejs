<% const existeMensaje = typeof mensaje !== "undefined" %>
<% if(existeMensaje){ %>
    <div class="alert alert-danger" role="alert">
            <p>Error en el Ingreso</p>
            <% mensaje.forEach( (mensajeerror)=> { %>
                <span><%= Object.values(mensajeerror.constraints) %></span>
                <br>
            <% }) %>
           
      </div>
<% } %>
<% const existeMensajeok = typeof mensajeok !== "undefined" %>
<% if(existeMensajeok){ %>
    <div class="alert alert-success" role="alert">
            <p>Usuario registrado con Éxito</p>
            <span> <%= Object.values(mensajeok)%> </span>
           
      </div>
<% } %>
<div class="container">
    <form action="/usuario/ingresarusuario" method="POST">
