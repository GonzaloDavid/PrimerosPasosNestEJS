<% const existeMensaje = typeof mensajeerror !== "undefined" %>
<% if(existeMensaje){ %>
    <div class="alert alert-danger" role="alert">
            <p>Credenciales incorrectas</p>
         
                <span><%= mensajeerror %></span>
                <br>
          
           
      </div>
<% } %>
<% const existeMensajeok = typeof mensajeok !== "undefined" %>
<% if(existeMensajeok){ %>
    <div class="alert alert-success" role="alert">
            <p>Bienvenido</p>
            <span> <%= Object.values(mensajeok)%> </span>
           
      </div>
<% } %>
<div class="container">
        <form action="/usuario/login" method="POST">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm">
                <div class="form-group">
                    <div class="clearfix">
                        <h3>Inicia sesión</h3>
                        <label for="InputEmail1">Correo Electronico</label>
                        <input type="email" class="form-control" id="InputEmail1" name="correo" aria-describedby="emailHelp"
                            placeholder="Ingrese email">
                        <small id="emailHelp" class="form-text text-muted">Nunca compartiremos tu correo electrónico con nadie más..</small>
                    </div>
                     <div class="form-group">
                        <label for="InputPassword1">Contraseña</label>
                        <input type="password" class="form-control" id="InputPassword1" name="password" placeholder="Contraseña">
                    </div>
                    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                </div>
        </div>
        <div class="col-sm">
        </div>
    </div>
</form>
</div>